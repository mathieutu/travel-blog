{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["esnext"],
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*"]
}
